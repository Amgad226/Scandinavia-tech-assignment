generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb://localhost:27017/events"
}

model Event {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  counter     Int
  description String
  createdAt   DateTime @default(now())
}
